{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ESNext"],
    "types": ["bun-types"],
    "sourceMap": true,
    "outDir": "build",
    "esModuleInterop": true,
    "paths": {
      "assets/*": [
        "./assets/*"
      ]
    },
    "include": [
      "./**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }
}